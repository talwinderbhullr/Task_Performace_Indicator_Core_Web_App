@page
@model Task_Performace_Indicator_Core_Web_App.Pages.Operators.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Operators</h1>

<p>
    <a class="btn btn-success" asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Operator[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Operator[0].IsPermanent)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Operator) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsPermanent)
            </td>
            <td>
                <a class="btn btn-success" asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a class="btn btn-success" asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a class="btn btn-success" asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
